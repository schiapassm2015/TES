<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- Título -->
    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
	    <TextView android:layout_alignParentLeft="true" 
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
	        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
	        android:text="Realizar Sincronización" />
	    
	    <ImageButton android:layout_alignParentRight="true"
	        android:background="@android:color/transparent"
	        android:id="@+id/btnAyuda"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:scaleType="centerCrop"
	        android:src="@drawable/ayuda"
	        android:contentDescription="@string/ayuda"/>
	    
	    <!-- Línea horizontal -->
	    <View android:layout_below="@+id/btnAyuda"
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="@android:color/darker_gray" />
	</RelativeLayout>
	
    <!-- Contenido -->
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView android:layout_weight="60"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Versión de datos y aplicación"/>
        
        <EditText android:layout_weight="40" 
            android:id="@+id/txtVersionDatos" 
            android:enabled="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView android:layout_weight="60"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Última sincronización"/>
        
        <EditText android:layout_weight="40" 
            android:id="@+id/txtUltimaSincronizacion" 
            android:enabled="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView android:layout_weight="60"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Controles a sincronizar"/>
        
        <EditText android:layout_weight="40" 
            android:id="@+id/txtControlesSincronizar" 
            android:enabled="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView android:layout_weight="60"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Localidad asignada"/>
        
        <EditText android:layout_weight="40" 
            android:id="@+id/txtLocalidad" 
            android:enabled="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView android:layout_weight="60"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Actualizaciones de pacientes"/>
        
        <EditText android:layout_weight="40" 
            android:id="@+id/txtActualizacionesPacientes" 
            android:enabled="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView android:layout_weight="60"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TES a actualizar"/>
        
        <EditText android:layout_weight="40" 
            android:id="@+id/txtTESactualizar" 
            android:enabled="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    
    <Button android:id="@+id/btnSincronizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Sincronizar"/>
    
</LinearLayout>
