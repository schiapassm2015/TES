<?xml version="1.0" encoding="utf-8"?>
<!--
Por seguir nomenclatura "grupo_subgrupo" el nombre de este layout
se compone de Grupo:controles, Subgrupo:censo, Control:censo_nominal
-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- Formulario filtro -->
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:text="@string/nombre" />
        
        <EditText
            android:id="@+id/txtNombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="35"
            android:singleLine="true"
            android:digits="@string/caracteres_permitidos" />
        
        <TextView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:layout_marginLeft="30dp"
            android:text="@string/sexo"/>
        
        <Spinner
            android:id="@+id/spSexo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            tools:listitem="@android:layout/simple_spinner_dropdown_item" />
        
    </LinearLayout>

    
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >     
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:text="@string/ano_nacimiento" />
        
        <EditText 
            android:id="@+id/txtAnoNacimiento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="35"
            android:maxLength="4"
            android:inputType="number"/>
            
        <Button
            android:id="@+id/btnVerTodos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="25"
            android:text="Ver Todos" />
        
        <Button android:id="@+id/btnFiltrar"
            android:layout_marginLeft="40dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="Filtrar"/>
    </LinearLayout>
    

    <!-- Contenido de resultados -->
    
    
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <!-- CONTENEDOR PRINCIPAL DE RESULTADOS -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <!-- CABECERA DE RESULTADOS DEL LISTVIEW -->
                
                <LinearLayout android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/borde" >
                    
                    <RelativeLayout android:background="@drawable/borde"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        
                        <TextView android:id="@+id/nombre_apellidos" 
                            android:layout_alignParentTop="true"
                            android:text="NOMBRE Y APELLIDOS"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:background="@drawable/borde"/>
                        
                        <TextView android:id="@+id/paterno" 
                            android:layout_alignParentLeft="true"
                            android:layout_below="@+id/nombre_apellidos"
                            android:text="Paterno"
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="@drawable/borde"/>
                        
                        <TextView android:id="@+id/materno"
                            android:layout_below="@+id/nombre_apellidos"
                            android:layout_toRightOf="@+id/paterno"
                            android:text="Materno"
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="@drawable/borde"/>
                        
                        <TextView android:id="@+id/nombre"
                            android:layout_below="@+id/nombre_apellidos"
                            android:layout_toRightOf="@+id/materno"
                            android:text="@string/nombre"
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="@drawable/borde"/>
                    </RelativeLayout>
                    
                    <TextView 
                        android:layout_width="140dp" 
                        android:layout_height="match_parent"
                        android:text="@string/domicilio" 
                        android:gravity="center" 
                        android:background="@drawable/borde" />
                    
                    <TextView 
                        android:layout_width="70dp" 
                        android:layout_height="match_parent"
                        android:text="@string/curp" 
                        android:gravity="center" 
                        android:background="@drawable/borde" />
                    
                    <TextView 
                        android:layout_width="70dp" 
                        android:layout_height="match_parent"
                        android:text="@string/fecha_nacimiento" 
                        android:gravity="center" 
                        android:background="@drawable/borde" />
                    
                    <TextView 
                        android:layout_width="13dp" 
                        android:layout_height="match_parent"
                        android:text="@string/sexo" 
                        android:gravity="center" 
                        android:background="@drawable/borde" />
                    
                    
                    <LinearLayout android:background="@drawable/borde"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    
                        <TextView android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:background="@drawable/borde"
                            android:text="Esquema de Vacunación"/>
                        
                        <!-- Títulos de grupos de vacunas -->
                        <LinearLayout android:background="@drawable/borde"
                            android:orientation="horizontal" 
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            
                            <TextView 
		                        android:layout_width="30dp" 
		                        android:layout_height="match_parent"
		                        android:text="@string/bcg" 
		                        android:gravity="center" 
		                        android:background="@drawable/borde" />
                            
                            <TextView 
		                        android:layout_width="54dp" 
		                        android:layout_height="match_parent"
		                        android:text="@string/hepatitis_b" 
		                        android:gravity="center" 
		                        android:background="@drawable/borde" />
                            
                            <TextView 
		                        android:layout_width="72dp" 
		                        android:layout_height="match_parent"
		                        android:text="Pentavalente" 
		                        android:gravity="center" 
		                        android:background="@drawable/borde" />
                            
                            <TextView 
		                        android:layout_width="30dp" 
		                        android:layout_height="match_parent"
		                        android:text="@string/dpt" 
		                        android:gravity="center" 
		                        android:background="@drawable/borde" />
                            
                            <TextView 
		                        android:layout_width="36dp" 
		                        android:layout_height="match_parent"
		                        android:text="SRP" 
		                        android:gravity="center" 
		                        android:background="@drawable/borde" />
                            
                            <TextView 
		                        android:layout_width="54dp" 
		                        android:layout_height="match_parent"
		                        android:text="@string/rotavirus" 
		                        android:gravity="center" 
		                        android:background="@drawable/borde" />
                            
                            <TextView 
		                        android:layout_width="54dp" 
		                        android:layout_height="match_parent"
		                        android:text="Neumococo" 
		                        android:gravity="center" 
		                        android:background="@drawable/borde" />
                            
                            <TextView 
		                        android:layout_width="54dp" 
		                        android:layout_height="match_parent"
		                        android:text="Influenza" 
		                        android:gravity="center" 
		                        android:background="@drawable/borde" />    
                        </LinearLayout>
                        
                        <!-- Celdas de vacunas individuales (U,1,2,3,R,etc) -->
                        <LinearLayout android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/borde">
                            
                            <!-- BCG -->
                            <TextView 
		                        android:layout_width="30dp" 
		                        android:layout_height="match_parent"
		                        android:text="U" 
		                        android:gravity="center" 
		                        android:background="@drawable/borde" />
                            
                            <!-- Hepatitis B -->
                            <TextView 
		                        android:layout_width="18dp" 
		                        android:layout_height="match_parent"
		                        android:text="1" 
		                        android:gravity="center" 
		                        android:background="@drawable/borde" />
                            <TextView 
		                        android:layout_width="18dp" 
		                        android:layout_height="match_parent"
		                        android:text="2" 
		                        android:gravity="center" 
		                        android:background="@drawable/borde" />
                            <TextView 
		                        android:layout_width="18dp" 
		                        android:layout_height="match_parent"
		                        android:text="3" 
		                        android:gravity="center" 
		                        android:background="@drawable/borde" />
                            
                            <!-- Pentavalente -->
                            <TextView 
		                        android:layout_width="18dp" 
		                        android:layout_height="match_parent"
		                        android:text="1" 
		                        android:gravity="center" 
		                        android:background="@drawable/borde" />
                            <TextView 
		                        android:layout_width="18dp" 
		                        android:layout_height="match_parent"
		                        android:text="2" 
		                        android:gravity="center" 
		                        android:background="@drawable/borde" />
                            <TextView 
		                        android:layout_width="18dp" 
		                        android:layout_height="match_parent"
		                        android:text="3" 
		                        android:gravity="center" 
		                        android:background="@drawable/borde" />
                            <TextView 
		                        android:layout_width="18dp" 
		                        android:layout_height="match_parent"
		                        android:text="4" 
		                        android:gravity="center" 
		                        android:background="@drawable/borde" />
                            
                            <!-- DPT -->
                            <TextView 
		                        android:layout_width="30dp" 
		                        android:layout_height="match_parent"
		                        android:text="R" 
		                        android:gravity="center" 
		                        android:background="@drawable/borde" />
                            
                            <!-- SRP -->
                            <TextView 
		                        android:layout_width="18dp" 
		                        android:layout_height="match_parent"
		                        android:text="1" 
		                        android:gravity="center" 
		                        android:background="@drawable/borde" />
                            <TextView 
		                        android:layout_width="18dp" 
		                        android:layout_height="match_parent"
		                        android:text="R" 
		                        android:gravity="center" 
		                        android:background="@drawable/borde" />
                            
                            <!-- Rotavirus -->
                            <TextView 
		                        android:layout_width="18dp" 
		                        android:layout_height="match_parent"
		                        android:text="1" 
		                        android:gravity="center" 
		                        android:background="@drawable/borde" />
                            <TextView 
		                        android:layout_width="18dp" 
		                        android:layout_height="match_parent"
		                        android:text="2" 
		                        android:gravity="center" 
		                        android:background="@drawable/borde" />
                            <TextView 
		                        android:layout_width="18dp" 
		                        android:layout_height="match_parent"
		                        android:text="3" 
		                        android:gravity="center" 
		                        android:background="@drawable/borde" />
                            
                            <!-- Neumococo -->
                            <TextView 
		                        android:layout_width="18dp" 
		                        android:layout_height="match_parent"
		                        android:text="1" 
		                        android:gravity="center" 
		                        android:background="@drawable/borde" />
                            <TextView 
		                        android:layout_width="18dp" 
		                        android:layout_height="match_parent"
		                        android:text="2" 
		                        android:gravity="center" 
		                        android:background="@drawable/borde" />
                            <TextView 
		                        android:layout_width="18dp" 
		                        android:layout_height="match_parent"
		                        android:text="3" 
		                        android:gravity="center" 
		                        android:background="@drawable/borde" />
                            
                            <!-- Influenza -->
                            <TextView 
		                        android:layout_width="18dp" 
		                        android:layout_height="match_parent"
		                        android:text="1" 
		                        android:gravity="center" 
		                        android:background="@drawable/borde" />
                            <TextView 
		                        android:layout_width="18dp" 
		                        android:layout_height="match_parent"
		                        android:text="2" 
		                        android:gravity="center" 
		                        android:background="@drawable/borde" />
                            <TextView 
		                        android:layout_width="18dp" 
		                        android:layout_height="match_parent"
		                        android:text="R" 
		                        android:gravity="center" 
		                        android:background="@drawable/borde" />
                            
                        </LinearLayout>
                    </LinearLayout>
                    
                    
                    
                </LinearLayout>
	
	
				<!-- DATOS -->
                <ListView
                    android:id="@+id/lvResultados"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    tools:listitem="@layout/fila_censo_nominal" >
                </ListView>

            </LinearLayout>
            
        </HorizontalScrollView>


</LinearLayout>